<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="default_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="main_left_state_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_textSizePercent">5%h</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--车门-->
    <style name="door_attr">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="layout_heightPercent">26%h</item>
        <item name="layout_widthPercent">28.1%w</item>
    </style>

    <style name="main_menu_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="layout_widthPercent">33.33%w</item>
        <item name="layout_heightPercent">30%h</item>
    </style>

    <style name="main_menu_icon_second">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_heightPercent">30%h</item>
        <item name="android:gravity">center</item>
        <item name="layout_widthPercent">33.33%w</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:layout_below">@id/fa_icon_1</item>
    </style>

    <style name="main_menu_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="layout_widthPercent">33.33%w</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--车辆设置界面-->
    <style name="car_set_item_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="car_set_item_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="car_set_toggle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <!--地图界面-->
    <style name="map_bottom_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <style name="map_bottom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="map_bottom_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="map_trajectory_control_icon">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!--obd界面-->
    <style name="obd_center_circle">
        <item name="android:layout_width">107dp</item>
        <item name="android:layout_height">107dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="layout_marginTopPercent">55%w</item>
    </style>

    <style name="obd_content_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="obd_content_item_icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="obd_content_item_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="obd_content_item_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#4DBFEF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="obd_content_item_state_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="obd_content_item_state_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="obd_content_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">#EBEBEB</item>
    </style>

    <!--忘记密码和注册界面-->
    <style name="operation_step_description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/forget_textview_background</item>
        <item name="android:textColor">#8D8D8D</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--更多操作界面-->

</resources>
